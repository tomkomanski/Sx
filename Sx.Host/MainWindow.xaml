<Window x:Name="MainWindow1" x:Class="Sx.Host.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sx.Host"
        mc:Ignorable="d"
        Title="NBP" Height="590" Width="800" ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="White"/>
            <GradientStop Color="#FF908ECA" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Canvas Margin="0,0,0,0" Width="780" Height="560" HorizontalAlignment="Center" VerticalAlignment="Center">
        <GroupBox x:Name="CurrentExchangeRates" Header="Current exchange rates:" BorderBrush="Black" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" Width="197">
            <Canvas Height="70" Width="130" HorizontalAlignment="Center" VerticalAlignment="Center">
                <ComboBox x:Name="Table_kind" Width="110" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" Height="20"/>
                <Button x:Name="ButtonGetCurrentData" Content="Get current data" Click="ButtonGetCurrentData_Click" RenderTransformOrigin="0.483,2.661" Canvas.Left="10" Canvas.Top="40" HorizontalAlignment="Left" VerticalAlignment="Center" Width="110" Height="20"/>
            </Canvas>
        </GroupBox>
        <DataGrid x:Name="CurrencyDataGrid" IsReadOnly="True" AutoGenerateColumns="True" Height="540" Canvas.Left="212" Canvas.Top="10" Width="558" HorizontalAlignment="Center" VerticalAlignment="Center" ColumnWidth="*"/>
        <GroupBox x:Name="ArchivedExchangeRates" Height="128" Header="Archived exchange rates:" BorderBrush="Black" Width="197" Canvas.Left="10" Canvas.Top="108" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Canvas Height="94" Width="166" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Year:"/>
                <Label Content="Month:" Canvas.Top="29"/>
                <TextBox x:Name="TextBoxYear" Canvas.Left="83" TextWrapping="Wrap" Canvas.Top="4" Width="73" HorizontalAlignment="Center" VerticalAlignment="Center" Height="21" PreviewTextInput="TextOnlyFourDigitAndControl" TextChanged="TextYearValidating" LostFocus="TextLostFocus"/>
                <ComboBox x:Name="ComboBoxMonths" Canvas.Left="83" Canvas.Top="31" Width="73" HorizontalAlignment="Left" VerticalAlignment="Center" DropDownOpened="ComboBoxMonthFilling"/>
            </Canvas>
        </GroupBox>
    </Canvas>

</Window>
